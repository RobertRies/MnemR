<?xml version="1.0" encoding="utf-8"?>

<!-- barzali -->

<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="horizontal" 
   android:layout_width="fill_parent" 
   android:layout_height="fill_parent" 
   android:id="@+id/listItemContainer" 
   android:gravity="fill_vertical">

                   <ImageButton 
                      android:background="@android:drawable/ic_lock_silent_mode_off" 
                      android:layout_width="45dip" 
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:id="@+id/sound_imagebtn" 
                      android:layout_marginRight="12dip" 
                      android:layout_height="wrap_content"
                      android:scaleType="fitXY" />
   
   
                 <ImageButton android:layout_width="1dip" 
                            android:background="@color/smok" 
                            android:layout_height="wrap_content" 
                            android:id="@+id/borderone" 
                            android:layout_alignParentTop="true" 
                                android:layout_marginRight="12dip" 
                                android:layout_alignParentBottom="true" 
                               android:layout_toLeftOf="@+id/sound_imagebtn" />
       
       
          
                        <TextView 
                       android:id="@+id/mnemr_text_id"
	                 
	                  android:textSize="12dip"
                      android:layout_width="wrap_content" 
                      android:layout_height="wrap_content" 
                      android:layout_marginRight="12dip" 
                      android:layout_marginLeft="12dip" 
                      android:paddingLeft="12dip"
                      android:paddingRight="12dip"
                      android:layout_centerVertical="true" 
                      android:layout_toLeftOf="@+id/borderone"
                      android:scaleType="fitXY" />
                  
                    <ImageButton android:layout_width="1px" 
                      android:background="@color/smok"
                      android:layout_height="wrap_content"   
                      android:id="@+id/bordertwo" 
                      android:layout_toLeftOf="@+id/mnemr_text_id"
                      android:layout_marginRight="12dip"
                     android:layout_alignParentBottom="true" 
                      android:layout_alignParentTop="true" />
  
                 <ImageButton 
                      android:id="@+id/mnemrphoto_id"
	                  android:background="@android:drawable/ic_menu_upload"
                      android:layout_width="45dip" 
                      android:layout_height="wrap_content" 
                      android:layout_marginLeft="12dip" 
                      android:layout_centerVertical="true"
                      android:layout_toLeftOf="@+id/bordertwo"
                        />
  
                   
                    
  
  
</RelativeLayout>