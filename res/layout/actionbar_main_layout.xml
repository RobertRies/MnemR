                      android:text="@string/app_name" android:padding="8dp" />
   
   
                    <ImageButton android:background="@android:drawable/ic_menu_search" 
                      android:layout_width="45dip" 
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:id="@+id/search" 
                      android:layout_marginRight="12dip" 
                      android:layout_height="wrap_content"
                      android:scaleType="fitXY" />
   
   
                 <ImageButton android:layout_width="1dip" 
                            android:background="@color/smok" 
                            android:layout_height="wrap_content"
  
                            android:id="@+id/borderone" android:layout_alignParentTop="true"
  
