                      android:layout_height="wrap_content" 
                      android:layout_marginRight="12dip" 
                      android:layout_centerVertical="true"
                    
                      android:layout_toLeftOf="@+id/borderone"
                      android:scaleType="fitXY" />
  
                    <ImageButton android:layout_width="1px" 
                      android:background="@color/smok"
                      android:layout_height="wrap_content"   
                      android:id="@+id/bordertwo" 
                      android:layout_toLeftOf="@+id/addmemo_id"
                      android:layout_marginRight="12dip"
                     android:layout_alignParentBottom="true" 
                      android:layout_alignParentTop="true" />
  
                 <ImageButton 
                      android:id="@+id/mnemrcards_id"
	                  android:background="@android:drawable/ic_menu_upload"
                      android:layout_width="45dip" 
                      android:layout_height="wrap_content" 
                      android:layout_marginRight="12dip" 
                      android:layout_centerVertical="true"
                      android:layout_toLeftOf="@+id/bordertwo"
                      android:scaleType="fitXY" />
  
                   <ImageButton android:layout_width="1px" 
                      android:background="@color/smok"
                      android:layout_height="wrap_content"   
                      android:id="@+id/borderthree" 
                      android:layout_toLeftOf="@+id/mnemrcards_id"
                      android:layout_marginRight="12dip"
                      android:layout_alignParentBottom="true" 
                      android:layout_alignParentTop="true" />
  
                 <ImageButton 
                     
                      android:id="@+id/mnemrlist_id"
	                  android:src="@android:drawable/ic_menu_agenda"
	                  android:visibility="gone"
                      android:layout_width="45dip" 
                      android:layout_height="wrap_content" 
                      android:layout_marginRight="12dip" 
                      android:layout_centerVertical="true"
                      android:layout_toLeftOf="@+id/mnemrcards_id"
                      android:scaleType="fitXY" />
  
  
               
  
       
  
               
  
 
 
 
