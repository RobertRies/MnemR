<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.mnemr"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="4" />

    <application  android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
    
	    <activity android:name=".ui.FlashcardsActivity"
	    			android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
			<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.dir/vnd.mnemr.mnemon"/>
            </intent-filter>
	    </activity>
        
		<activity android:name=".ui.MnemEditorActivity" 
					android:windowSoftInputMode="adjustPan"
					android:icon="@drawable/icon"
					android:label="Catch"
				  	android:theme="@android:style/Theme.NoTitleBar">
			            <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
             <category android:name="android.intent.category.LAUNCHER"/>
             </intent-filter>
			<intent-filter>
                <action android:name="android.intent.action.INSERT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.dir/vnd.mnemr.mnemon"/>
            </intent-filter>
			<intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.dir/vnd.mnemr.mnemon"/>
            </intent-filter>
		</activity>

        <activity android:name=".ui.MnemListActivity"
        			android:theme="@android:style/Theme.NoTitleBar" android:label="Vault" 
        		  android:icon="@drawable/list" android:launchMode="singleTop">
            <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
             <category android:name="android.intent.category.LAUNCHER"/>
             </intent-filter>
			<intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                    android:resource="@xml/searchable">
            </meta-data>
        </activity>

        <provider android:name=".provider.MnemProvider"
        			android:authorities="com.mnemr">
        </provider>
        <receiver android:name=".utils.CameraButtonReceiver">
	        <intent-filter android:priority="10000">         
	        <action android:name="android.intent.action.CAMERA_BUTTON" />
	        <category android:name="android.intent.category.DEFAULT" />
	    	</intent-filter>
    	</receiver>

</application>
<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
</manifest>
